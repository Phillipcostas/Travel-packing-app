<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Items to Pack</title>
</head>
<body>
    <% include('../partials/_navbar.ejs') %>
    <h1>All the items that you are going to need for the perfect vacation!</h1>

    <h2>Toiletries</h2>
    <form action="/users/<%= user._id %>/items/suitcase/:itemsId/edit" method="GET">
        <ul>
            <% suitcase.toiletries.forEach(function(item) { %>
                <li>
                    <input type="checkbox" name="<%= item.id %>" id="<%= item.id %>" <% if (item.packed) { %>checked<% } %>>
                    <label for="<%= item.id %>"><%= item.name %></label>
                    <label for="isPacked">Pack It?</label>
                    <input type="checkbox" name="isPacked" id="isPacked">
                </li>
            <% }); %>
        </ul>
        <button type="submit">Update Toiletries List</button>
    </form>
    <br>

    <h2>Essentials</h2>
